<resources>
    <style name="Theme.UoSBot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/uos_primary</item>
        <item name="colorPrimaryDark">@color/uos_primary_dark</item>
        <item name="colorAccent">@color/uos_accent</item>
        <item name="colorError">@color/uos_error</item>
        <item name="android:windowBackground">@color/uos_background</item>
    </style>
    
    <style name="Theme.UoSBot.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/uos_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- Custom TextInputLayout Style -->
    <style name="Widget.UoSBot.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Outline color (uses color state list for focused/error states) -->
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <!-- Hint text color (uses color state list for focused/error states) -->
        <item name="hintTextColor">@color/hint_text_color</item>
        <!-- Text color - WHITE for input text -->
        <item name="android:textColorHint">@color/uos_text_secondary</item>
        <item name="android:textColor">@color/white</item>
        <!-- Box corner radius -->
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <!-- Box stroke width -->
        <item name="boxStrokeWidth">2dp</item>
    </style>
    
    <!-- Custom TextInputEditText Style -->
    <style name="Widget.UoSBot.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/uos_text_secondary</item>
    </style>
</resources>

