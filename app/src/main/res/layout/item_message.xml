<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="start">

    <LinearLayout
        android:id="@+id/layoutMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/message_bot_background"
        android:maxWidth="300dp"
        android:elevation="1dp">

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/uos_text_primary"
            android:textIsSelectable="true"
            android:lineSpacingExtra="4dp"
            android:textColorHint="@color/uos_text_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/uos_text_secondary"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/buttonCopy"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_copy"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy"
                android:tint="@color/uos_primary"
                android:padding="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

